<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controlador.ResultadoActivity">

    <ImageView
        android:id="@+id/id_image_sus"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@drawable/img"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/id_sus"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_image_sus"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="26dp"
        android:text="Id"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/id_nombre_sus"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_sus"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="26dp"
        android:text="Nombre"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/id_usuario_sus"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_nombre_sus"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="26dp"
        android:textColor="#000"

        android:text="usuario"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/id_cuenta_sus"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_usuario_sus"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="41dp"
        android:textColor="#000"

        android:layout_marginTop="26dp"
        android:text="cuenta"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/id_contra_sus"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_cuenta_sus"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-372dp"

        android:layout_marginTop="26dp"
        android:layout_toRightOf="@id/id_cuenta_sus"
        android:text="******************"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_editar"
        android:layout_width="131dp"
        android:layout_height="66dp"
        android:layout_below="@+id/id_contra_sus"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="20dp"

        android:background="@color/colorAccent"
        android:text="Editar"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:id="@+id/button_eliminar"
        android:layout_width="131dp"
        android:layout_height="66dp"
        android:layout_below="@+id/id_contra_sus"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@+id/button_editar"
        android:background="@android:color/holo_red_dark"
        android:text="Eliminar"
        android:textColor="@color/cardview_light_background" />
</RelativeLayout>